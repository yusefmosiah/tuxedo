FROM python:3.12-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    && rm -rf /var/lib/apt/lists/*

# Install uv for faster package management
RUN pip install uv

# Copy dependency files (from project root)
COPY backend/pyproject.toml ./
COPY backend/uv.lock ./

# Install Python dependencies
RUN uv pip install --system -e .

# Create Jinja2 cache directory in OpenHands package (fallback if hardcoded path)
# This addresses the specific error: /usr/local/lib/python3.12/site-packages/openhands/sdk/agent/prompts/.jinja_cache
RUN mkdir -p /usr/local/lib/python3.*/site-packages/openhands/sdk/agent/prompts/.jinja_cache 2>/dev/null || true && \
    chmod -R 777 /usr/local/lib/python3.*/site-packages/openhands/sdk/agent/prompts/.jinja_cache 2>/dev/null || true

# Copy backend source code (excluding .env and other ignored files via .dockerignore)
COPY backend/ ./

# Create non-root user
RUN useradd --create-home --shell /bin/bash app

# Create writable cache directory for LiteLLM/OpenHands/Jinja2
RUN mkdir -p /tmp/tuxedo_cache && chown -R app:app /tmp/tuxedo_cache

# Set cache environment variables at container level (before app user switch)
ENV TMPDIR=/tmp/tuxedo_cache
ENV XDG_CACHE_HOME=/tmp/tuxedo_cache
ENV LITELLM_CACHE_DIR=/tmp/tuxedo_cache
ENV JINJA2_CACHE_DIR=/tmp/tuxedo_cache

RUN chown -R app:app /app
USER app

# Expose port
EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python -c "import requests; requests.get('http://localhost:8000/health')" || exit 1

# Start the application
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]
