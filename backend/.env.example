# OpenAI/OpenRouter Configuration
OPENAI_API_KEY=your_openrouter_api_key_here
OPENAI_BASE_URL=https://openrouter.ai/api/v1

# AI Model Configuration
PRIMARY_MODEL=z-ai/glm-4.6:exacto
SUMMARIZATION_MODEL=z-ai/glm-4.6:exacto



# Web Search API Configuration (for Ghostwriter research)
# Get API key from: https://app.tavily.com/
# Tavily is optimized for AI research tasks with authoritative sources
TAVILY_API_KEY=your_tavily_api_key_here

# Alternative: Brave Search API (uncomment to use instead of Tavily)
# Get API key from: https://brave.com/search/api/
# BRAVE_SEARCH_API_KEY=your_brave_api_key_here

# FastAPI Configuration
DEBUG=true
HOST=0.0.0.0
PORT=8000

# Cache Configuration (for LiteLLM/OpenHands/Jinja2)
# Directory for caching model responses, intermediate files, and template bytecode
# Defaults to /tmp/tuxedo_cache if not specified
# Also sets TMPDIR for Jinja2 bytecode cache (used by OpenHands SDK)
# CACHE_DIR=/tmp/tuxedo_cache

# CORS Configuration
CORS_ORIGINS=["http://localhost:5173"]

# Logging Configuration
LOG_LEVEL=info

# Stellar Network Configuration - MAINNET ONLY
# Tuxedo operates exclusively on mainnet with real funds and real yields
STELLAR_NETWORK=mainnet

# Mainnet Configuration
MAINNET_HORIZON_URL=https://horizon.stellar.org
# ANKR_STELLER_RPC: Required for mainnet RPC access (set in Render.com secrets or .env)
ANKR_STELLER_RPC=your_ankr_rpc_url_here
# Alternative: MAINNET_SOROBAN_RPC_URL=your_rpc_provider_url

# Account Encryption Configuration
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# IMPORTANT: Keep these secret and secure in production!
ENCRYPTION_MASTER_KEY=your_generated_encryption_key_here
ENCRYPTION_SALT=tuxedo-agent-accounts-v1
