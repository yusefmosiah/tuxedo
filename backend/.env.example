# OpenAI/OpenRouter Configuration
OPENAI_API_KEY=your_openrouter_api_key_here
OPENAI_BASE_URL=https://openrouter.ai/api/v1

# AI Model Configuration
PRIMARY_MODEL=openai/gpt-oss-120b:exacto
SUMMARIZATION_MODEL=openai/gpt-oss-120b:exacto


# FastAPI Configuration
DEBUG=true
HOST=0.0.0.0
PORT=8000

# CORS Configuration
CORS_ORIGINS=["http://localhost:5173"]

# Logging Configuration
LOG_LEVEL=info

# Stellar Network Configuration
# Default network for read operations (queries, pool data, APY)
STELLAR_NETWORK=mainnet

# Mainnet Configuration (for production use - real yields!)
MAINNET_HORIZON_URL=https://horizon.stellar.org
# ANKR_STELLER_RPC: Set this in Render.com secrets for mainnet RPC access
ANKR_STELLER_RPC=your_ankr_rpc_url_here
# Alternative: MAINNET_SOROBAN_RPC_URL=your_rpc_provider_url

# Testnet Configuration (for account creation and testing)
TESTNET_HORIZON_URL=https://horizon-testnet.stellar.org
TESTNET_SOROBAN_RPC_URL=https://soroban-testnet.stellar.org
FRIENDBOT_URL=https://friendbot.stellar.org

# Account Encryption Configuration
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# IMPORTANT: Keep these secret and secure in production!
ENCRYPTION_MASTER_KEY=your_generated_encryption_key_here
ENCRYPTION_SALT=tuxedo-agent-accounts-v1